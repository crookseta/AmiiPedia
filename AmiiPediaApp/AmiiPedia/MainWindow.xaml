<Window x:Class="AmiiPedia.MainWindow" Loaded="Window_Loaded"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AmiiPedia"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*" MinWidth="120"/>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="25"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        <Rectangle Grid.RowSpan="4" Fill="#FF424242"/>
        <Rectangle Grid.ColumnSpan="3" Grid.Column="1" Grid.RowSpan="2" Fill="#FF424242"/>
        <DockPanel  Grid.Column="1" Grid.Row="1">
            <Button x:Name="searchBtn" DockPanel.Dock="Right" Width="40" Content="Search"
                    Click="searchBtn_Click"/>
            <TextBox x:Name="searchBox" Grid.Row="1" Grid.Column="1" 
                     Height="auto" Width="230" DockPanel.Dock="Right" HorizontalAlignment="Right" 
                     FontSize="14" TextAlignment="Right"/>
        </DockPanel>


        <ScrollViewer Grid.Row="2" Grid.Column="1"
                      VerticalScrollBarVisibility="Auto">
            <WrapPanel x:Name="ImagesPanel">
                
            </WrapPanel>
            
        </ScrollViewer>

        <Button x:Name="prevBtn" Content="Previous" Grid.Row="3" Grid.Column="1"
                VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,70,0"
                Click="prevBtn_Click"/>
        <TextBox x:Name="pageNumber" Grid.Row="3" Grid.Column="1" Text="1"
                 VerticalAlignment="Center" HorizontalAlignment="Center" Width="20" FontSize="14"
                 PreviewTextInput="pageNumber_PreviewTextInput" KeyDown="pageNumber_KeyDown"
                 TextAlignment="Right"/>
        <Button x:Name="nextBtn" Content="Next" Grid.Row="3" Grid.Column="1"
                VerticalAlignment="Center" HorizontalAlignment="Center" Margin="50,0,0,0"
                Click="nextBtn_Click"/>
    </Grid>
</Window>
